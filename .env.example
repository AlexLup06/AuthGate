# =========================================================
# AuthGate – Environment Variable Contract
#
# This file is an EXAMPLE only.
# - Do NOT commit real secrets
# - Do NOT use this file in production
# - Copy to .env and fill in values for local development
# =========================================================


# ---------------------------------------------------------
# Runtime Environment
# ---------------------------------------------------------

# Environment name (informational)
# Examples: dev, staging, prod
ENV=dev

# Enables development conveniences (logging, etc.)
DEV_MODE=true


# ---------------------------------------------------------
# HTTP Server
# ---------------------------------------------------------

# Address the HTTP server listens on
HTTP_ADDR=:8080


# ---------------------------------------------------------
# Logging
# ---------------------------------------------------------

# Log level: debug | info | warn | error
LOG_LEVEL=info


# ---------------------------------------------------------
# PostgreSQL Database (REQUIRED)
# ---------------------------------------------------------

# Database host
POSTGRESQL_HOST=

# Database port
POSTGRESQL_PORT=5432

# Database name
POSTGRESQL_DATABASE=

# Database user
POSTGRESQL_USERNAME=

# Database password
POSTGRESQL_PASSWORD=

# PostgreSQL schema (default: public)
POSTGRESQL_SCHEMA=public

# Timezone used by the database connection
POSTGRESQL_TIMEZONE=UTC

# Enable SQL query logging (debugging only)
POSTGRESQL_LOG_SQL=false


# ---------------------------------------------------------
# Authentication / Security (REQUIRED)
# ---------------------------------------------------------

# Secret key used for signing JWTs
# MUST be a long, random, high-entropy value in production
JWT_KEY=


# ---------------------------------------------------------
# OAuth (Optional – future use)
# ---------------------------------------------------------

# Google OAuth client ID
GOOGLE_CLIENT_ID=
